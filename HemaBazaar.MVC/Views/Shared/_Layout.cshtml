    <style>
        .account-dropdown {
            position: relative;
        }

            .account-dropdown > a {
                cursor: pointer;
            }

        /* Başta kapalı */
        .account-menu {
            position: absolute;
            right: 0;
            top: 100%;
            margin-top: 4px;
            background: #1E1F29;
            padding: 10px 0;
            border: 1px solid #E4E7ED;
            border-radius: 4px;
            min-width: 180px;
            display: none;
            flex-direction: column;
            z-index: 999;
        }

            .account-menu.open {
                /* JS bu sınıfı verince açılacak */
                display: flex;
            }

            .account-menu li {
                display: block !important;
                margin: 0;
            }

                .account-menu li a,
                .logout-btn {
                    display: block;
                    padding: 8px 18px;
                    color: #ffffff;
                    text-decoration: none;
                    background: transparent;
                    border: none;
                    width: 100%;
                    text-align: left;
                    font-size: 13px;
                }

                    .account-menu li a:hover,
                    .logout-btn:hover {
                        background: #D10024;
                        color: #fff;
                    }

        .logout-btn {
            cursor: pointer;
        }

        

    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var dropdown = document.querySelector('.account-dropdown');
            if (!dropdown) return;

            var menu = dropdown.querySelector('.account-menu');
            var hideTimeout;

            // Üst user'a gelince aç
            dropdown.addEventListener('mouseenter', function () {
                clearTimeout(hideTimeout);
                menu.classList.add('open');
            });

            // Hem user alanından hem menüden çıkınca bir süre sonra kapat
            dropdown.addEventListener('mouseleave', function () {
                hideTimeout = setTimeout(function () {
                    menu.classList.remove('open');
                }, 150); // 150ms tolerans; gap olsa bile kapanmıyor
            });
        });
    </script>

