@model ItemDTO
@{
    ViewData["Title"] = "Item Details";
}

<div class="section">
    <div class="container">
        <div class="row">

            <!-- ÜRÜN GÖRSELİ -->
            <div class="col-md-5">
                <div id="product-main-img">
                    <div class="product-preview">
                        <img src="~/img/LongSword.png" alt="Steel Longsword" />
                    </div>
                </div>
            </div>

            <!-- ÜRÜN BİLGİLERİ -->
            <div class="col-md-7">
                <div class="product-details">
                    <h2 class="product-name">@Model.Title</h2>

                    <div>
                        <div class="product-rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-half-o"></i>
                            <i class="fa fa-star-o"></i>
                        </div>
                    </div>

                    <div>
                        <h3 class="product-price">
                            @Model.Price
                            
                        </h3>
                        <span class="product-available">In stock</span>
                    </div>

                    <p>
                        @Model.Description
                    </p>

                    <div class="product-options">
                        <label>
                            Size:
                            <select class="input-select">
                                <option>Standard</option>
                                <option>Long</option>
                            </select>
                        </label>
                    </div>

                    <!-- DÜZELTİLMİŞ ADD TO CART BLOĞU -->
                    <div class="add-to-cart">
                        <div class="qty-label">
                            Qty
                            <div class="input-number">
                                <input type="number" value="1" min="1" />
                                <span class="qty-up">+</span>
                                <span class="qty-down">-</span>
                            </div>
                        </div>

                        <button type="button" class="add-to-cart-btn">
                            <i class="fa fa-shopping-cart"></i> add to cart
                        </button>
                    </div>
                    <!-- /ADD TO CART -->

                    <ul class="product-links">
                        <li>Category:</li>
                        <li><a href="#">@Model.CategoryName</a></li>
                    </ul>

                    <div style="margin-top:20px;">
                        <a href="/Item" class="primary-btn" style="background:#fff; color:#D10024; border:1px solid #D10024;">
                            ← Back to All Items
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
