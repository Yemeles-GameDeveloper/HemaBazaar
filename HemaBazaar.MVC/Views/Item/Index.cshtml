@{
    ViewData["Title"] = "Items";
    // Layout'u _ViewStart'ta ayarladıysan burada tekrar yazmana gerek yok.
}

<div class="section">
    <div class="container">
        <div class="row">

            <!-- SECTION TITLE -->
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">All Items</h3>
                </div>
            </div>

            <!-- ITEM GRID -->
            <div class="col-md-12">
                <div class="row">

                    <!-- Item 1 -->
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="product-img fixed-img">
                                <img src="~/img/LongSword.png" alt="Steel Longsword">
                                <div class="product-label">
                                    <span class="sale">-15%</span>
                                    <span class="new">NEW</span>
                                </div>
                            </div>
                            <div class="product-body">
                                <p class="product-category">Weapon</p>
                                <h3 class="product-name">
                                    <a href="#">Steel Longsword</a>
                                </h3>
                                <h4 class="product-price">
                                    $150.00 <del class="product-old-price">$180.00</del>
                                </h4>
                                <div class="product-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-half-o"></i>
                                    <i class="fa fa-star-o"></i>
                                </div>
                            </div>

                            <div class="add-to-cart" style="text-align:center;">
                                <button class="add-to-cart-btn">
                                    <i class="fa fa-shopping-cart"></i> add to cart
                                </button>

                                <!-- Detay butonu -->
                                <a asp-controller="Item" asp-action="Details" 
                                   class="primary-btn"
                                   style="margin-top:8px; display:inline-block; padding:6px 15px;">
                                    Show Details
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- /Item 1 -->
                    <!-- Item 2 -->
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="product-img fixed-img">
                                <img src="~/img/fencingmask.png" alt="HEMA Mask">
                                <div class="product-label">
                                    <span class="new">NEW</span>
                                </div>
                            </div>
                            <div class="product-body">
                                <p class="product-category">Armor</p>
                                <h3 class="product-name">
                                    <a href="#">HEMA Fencing Mask</a>
                                </h3>
                                <h4 class="product-price">$120.00</h4>
                                <div class="product-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                </div>
                            </div>

                            <div class="add-to-cart" style="text-align:center;">
                                <button class="add-to-cart-btn">
                                    <i class="fa fa-shopping-cart"></i> add to cart
                                </button>

                                <a asp-controller="Item" asp-action="Details" 
                                   class="primary-btn"
                                   style="margin-top:8px; display:inline-block; padding:6px 15px;">
                                    Show Details
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- /Item 2 -->
                    <!-- Item 3 -->
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="product-img fixed-img">
                                <img src="~/img/paddedgambeson.png" alt="Padded Gambeson">
                                <div class="product-label">
                                    <span class="sale">-10%</span>
                                </div>
                            </div>
                            <div class="product-body">
                                <p class="product-category">Armor</p>
                                <h3 class="product-name">
                                    <a href="#">Padded Gambeson</a>
                                </h3>
                                <h4 class="product-price">
                                    $200.00 <del class="product-old-price">$220.00</del>
                                </h4>
                                <div class="product-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
