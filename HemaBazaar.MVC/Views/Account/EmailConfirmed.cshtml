@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="section">
    <div class="container">
        <div class="row">

            <div class="col-md-8 col-md-offset-2">
                <div class="billing-details text-center">

                    <div style="font-size:100px; color:#00C851; margin-bottom:20px;">
                        <i class="fa fa-check-circle"></i>
                    </div>

                    <h3 class="title">Your Email Has Been Confirmed!</h3>

                    <p style="font-size:16px; margin-top:10px;">
                        Thank you! Your account is now active.
                    </p>

                    <p style="color:#8D99AE;">
                        You can now sign in using your email and password.
                    </p>

                    <a asp-controller="Account" asp-action="Login" class="primary-btn" style="margin-top:20px;">
                        Proceed to Login
                    </a>

                </div>
            </div>

        </div>
    </div>
</div>
