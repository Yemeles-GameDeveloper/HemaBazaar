@model HemaBazaar.MVC.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="section">
    <div class="container">
        <div class="row">

            <div class="col-md-6 col-md-offset-3">
                <div class="billing-details">
                    <div class="section-title text-center">
                        <h3 class="title">Create Your Account</h3>
                    </div>

                    <!-- HATA MESAJLARI BURAYA DÜŞECEK -->
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <form asp-controller="Account" asp-action="Register" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <input asp-for="FullName" class="input" placeholder="Fullname" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="UserName" class="input" placeholder="UserName" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="Email" class="input" type="email" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="Password" class="input" type="password" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="primary-btn btn-block">Register</button>

                        <div class="text-center" style="margin-top:20px;">
                            Already have an account?
                            <a asp-controller="Account" asp-action="Login">Login here</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


