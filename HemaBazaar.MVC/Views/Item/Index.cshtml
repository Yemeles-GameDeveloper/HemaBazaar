                            <div class="product-body">
                                <p class="product-category">Accessory</p>
                                <h3 class="product-name">
                                    <a href="#">HEMA Training Gloves</a>
                                </h3>
                                <h4 class="product-price">$90.00</h4>
                                <div class="product-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-half-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                </div>
                            </div>

                            <div class="add-to-cart" style="text-align:center;">
                                <button class="add-to-cart-btn">
                                    <i class="fa fa-shopping-cart"></i> add to cart
                                </button>

                                <a asp-controller="Item" asp-action="Details" 
                                   class="primary-btn"
                                   style="margin-top:8px; display:inline-block; padding:6px 15px;">
                                    Show Details
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- /Item 4 -->

                </div>
            </div>

        </div>
    </div>
</div>
