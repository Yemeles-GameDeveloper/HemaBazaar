                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-o"></i>
                                </div>
                            </div>

                            <div class="add-to-cart" style="text-align:center;">
                                <button class="add-to-cart-btn">
                                    <i class="fa fa-shopping-cart"></i> add to cart
                                </button>

                                <a asp-controller="Item" asp-action="Details" 
                                   class="primary-btn"
                                   style="margin-top:8px; display:inline-block; padding:6px 15px;">
                                    Show Details
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- /Item 3 -->
                    <!-- Item 4 -->
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="product-img fixed-img">
                                <img src="~/img/traininggloves.png" alt="HEMA Training Gloves">
