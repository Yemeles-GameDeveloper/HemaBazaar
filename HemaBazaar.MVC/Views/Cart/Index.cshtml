@{
    ViewData["Title"] = "Cart";
    // Layout'u _ViewStart.cshtml'de ayarladıysan burada tekrar yazmana gerek yok.
    // Yoksa:
    // Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section">
    <div class="container">
        <div class="row">

            <!-- CART ITEMS -->
            <div class="col-md-8">
                <div class="section-title">
                    <h3 class="title">Your Cart</h3>
                </div>

                <div class="cart-list">

                    <!-- Cart Item 1 -->
                    <div class="product-widget">
                        <div class="product-img">
                            <img src="~/img/product01.png" alt="Steel Longsword">
                        </div>
                        <div class="product-body">
                            <p class="product-category">Weapon</p>
                            <h3 class="product-name">
                                <a href="#">Steel Longsword</a>
                            </h3>
                            <h4 class="product-price">
                                $150.00
                                <small class="qty"> x 2</small>
                            </h4>
                        </div>
                        <div class="cart-controls">
                            <input type="number" class="input" value="2" min="1" style="width:70px;">
                            <button class="delete"><i class="fa fa-close"></i></button>
                        </div>
                    </div>
                    <!-- /Cart Item 1 -->
                    <!-- Cart Item 2 -->
                    <div class="product-widget">
                        <div class="product-img">
                            <img src="~/img/product02.png" alt="HEMA Mask">
                        </div>
                        <div class="product-body">
                            <p class="product-category">Armor</p>
                            <h3 class="product-name">
                                <a href="#">HEMA Fencing Mask</a>
                            </h3>
                            <h4 class="product-price">
                                $120.00
                                <small class="qty"> x 1</small>
                            </h4>
                        </div>
                        <div class="cart-controls">
                            <input type="number" class="input" value="1" min="1" style="width:70px;">
                            <button class="delete"><i class="fa fa-close"></i></button>
                        </div>
                    </div>
                    <!-- /Cart Item 2 -->
                    <!-- Cart Item 3 -->
                    <div class="product-widget">
                        <div class="product-img">
                            <img src="~/img/product03.png" alt="Padded Gambeson">
                        </div>
                        <div class="product-body">
                            <p class="product-category">Armor</p>
                            <h3 class="product-name">
                                <a href="#">Padded Gambeson</a>
                            </h3>
                            <h4 class="product-price">
                                $200.00
                                <small class="qty"> x 1</small>
                            </h4>
                        </div>
                        <div class="cart-controls">
                            <input type="number" class="input" value="1" min="1" style="width:70px;">
                            <button class="delete"><i class="fa fa-close"></i></button>
                        </div>
                    </div>
                    <!-- /Cart Item 3 -->

                </div>
            </div>
            <!-- /CART ITEMS -->
            <!-- CART SUMMARY -->
            <div class="col-md-4">
                <div class="order-details">
                    <div class="section-title text-center">
                        <h3 class="title">Order Summary</h3>
                    </div>

                    <div class="order-summary">
                        <div class="order-col">
                            <div><strong>PRODUCT</strong></div>
                            <div><strong>SUBTOTAL</strong></div>
                        </div>

                        <div class="order-products">
                            <div class="order-col">
                                <div>2x Steel Longsword</div>
                                <div>$300.00</div>
                            </div>
                            <div class="order-col">
                                <div>1x HEMA Fencing Mask</div>
                                <div>$120.00</div>
                            </div>
                            <div class="order-col">
                                <div>1x Padded Gambeson</div>
                                <div>$200.00</div>
                            </div>
                        </div>

                        <div class="order-col">
                            <div>Shipping</div>
                            <div><strong>FREE</strong></div>
                        </div>

                        <div class="order-col">
                            <div><strong>TOTAL</strong></div>
                            <div><strong class="order-total">$620.00</strong></div>
                        </div>
                    </div>

                    <a href="/Checkout" class="primary-btn order-submit">Proceed to Checkout</a>
                    <a href="/" class="primary-btn" style="margin-top:10px; background:#fff; color:#D10024; border:1px solid #D10024;">
                        Continue Shopping
                    </a>
                </div>
            </div>
            <!-- /CART SUMMARY -->

        </div>
    </div>
</div>

